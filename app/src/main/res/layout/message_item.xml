<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="8dp"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layMsgPartner"
        android:visibility="visible"
        android:padding="5dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/back_chat_second_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMsgPartner"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                tools:text="Example message hjfkvdfjvhdfkvgdfhvgkhfbjkhdfbjkdfhb" />

            <ImageView
                android:id="@+id/imgMsgPartner"
                android:contentDescription="show view some image"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_width="140dp"
                android:layout_height="140dp"/>

            <LinearLayout
                android:id="@+id/panel3dFilePartner"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:contentDescription="some 3d file"
                    android:src="@drawable/ic__d_file"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:id="@+id/tvFilename3dPartner"
                    android:layout_gravity="center_vertical"
                    tools:text="kfvjdeldldldfgjhl.glb"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btn3dDownloadPartner"
                    android:contentDescription="download 3d file"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/back_btn"
                    android:src="@drawable/ic_baseline_file_download_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panelFilePartner"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_insert_drive_file_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="some any file" />

                <TextView
                    android:id="@+id/tvFilenamePartner"
                    android:layout_gravity="center_vertical"
                    tools:text="kfvjdeldldldfgjhl.glb"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btnDownloadFilePartner"
                    android:contentDescription="download file"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/back_btn"
                    android:src="@drawable/ic_baseline_file_download_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layMsgMy"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/back_chat_my_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMsgMy"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                tools:text="Example message dfklvdfvlkfjrefgerjfgodrigujeroguerioeurjdfbklfkldfkldkdkdkk" />

            <ImageView
                android:id="@+id/imgMsgMy"
                android:contentDescription="show view some image"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <LinearLayout
                android:id="@+id/panel3dFileMy"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:contentDescription="some 3d file"
                    android:src="@drawable/ic__d_file"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:id="@+id/tvFilename3dMy"
                    android:layout_gravity="center_vertical"
                    tools:text="kfvjdeldldldfgjhl.glb"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btn3dDownloadMy"
                    android:contentDescription="download 3d file"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/back_btn"
                    android:src="@drawable/ic_baseline_file_download_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panelFileMy"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_insert_drive_file_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="some any file" />

                <TextView
                    android:id="@+id/tvFilenameMy"
                    android:layout_gravity="center_vertical"
                    tools:text="kfvjdeldldldfgjhl.glb"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btnDownloadFileMy"
                    android:contentDescription="download file"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/back_btn"
                    android:src="@drawable/ic_baseline_file_download_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>