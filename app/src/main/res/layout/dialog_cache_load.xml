<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="60dp"
    android:background="@drawable/background_sign"
    android:backgroundTint="@color/teal_light"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:src="@drawable/ic_baseline_signal_wifi_off_24"
        android:layout_width="130dp"
        app:tint="@color/teal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="130dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:textColor="@color/color_head_txt"
        android:fontFamily="@font/roboto_regular"
        android:textAlignment="center"
        android:text="Your's data have loaded from cache! Internet connection error!"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>